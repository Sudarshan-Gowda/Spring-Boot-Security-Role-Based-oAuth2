<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %m%n</pattern>
        </encoder>
    </appender>

    <appender name="TIME_BASED_FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>rest-api.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">aaj
            <fileNamePattern>Rest-API.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern> %d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %m%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="TIME_BASED_FILE" />
    </root>

</configuration>

